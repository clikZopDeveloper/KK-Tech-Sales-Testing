    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4dip"
        app:cardCornerRadius="@dimen/_5dip"
        app:cardElevation="@dimen/_5dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_6dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5dip"
                android:layout_marginTop="@dimen/_5dip"
                android:orientation="horizontal"
                android:padding="@dimen/_2dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDate"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Product Name : "
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDate"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />

                <CheckBox
                    android:id="@+id/CheckBox"
                    android:layout_width="@dimen/_20dip"
                    android:layout_height="@dimen/_20dip" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5dip"
                android:layout_marginTop="@dimen/_5dip"
                android:orientation="horizontal"
                android:padding="@dimen/_2dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvStartTime"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Price : "
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:id="@+id/tvMobileNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvStartTime"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5dip"
                android:layout_marginTop="@dimen/_5dip"
                android:orientation="horizontal"
                android:padding="@dimen/_2dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Date : "
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>